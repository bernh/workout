use wtree::{Run, Workout, DistanceAndTime, pace2speed};
use config::get_pace;

grammar;

pub Workout_main : Workout = {
    <p:Parts>  => { 
        let mut w = Workout::new(1);
        w.nodes = p;
        w
    },
};

pub Parts : Vec<Box<DistanceAndTime>> = {
    <p:Part> => vec![p],
    <l:Parts> "+" <r:Part> => {
        let mut l = l;
        l.push(r);
        l
    }
};

pub Part : Box<DistanceAndTime> = {
    <s:Step> => Box::new(s),
    <w:Workout> => Box::new(w),
};

pub Workout : Workout = {
    <n:Num> "*" "(" <p:Parts> ")" => {
        let mut w = Workout::new(n);
        w.nodes = p;
        w
    }
};

pub Step : Run = {
    TimeRun,
    DistanceRun,
};

TimeRun : Run = {
    <t:Num> "min" <e:Effort> => Run::from_time(t as f32 * 60.0, pace2speed(get_pace(&e))),
};

DistanceRun : Run = {
    <d:Num><e:Effort> => Run::from_distance(d as f32, pace2speed(get_pace(&e))),
};

Num: i32 = {
    r"[0-9]+" => <>.parse::<i32>().unwrap(),
};

Effort : String = {
    r"[ELMTHIR]" => <>.to_string(),
    "jog"        => <>.to_string(),
    "jg"         => <>.to_string(),
    "rest"       => <>.to_string(),
    "rst"        => <>.to_string(),
};
